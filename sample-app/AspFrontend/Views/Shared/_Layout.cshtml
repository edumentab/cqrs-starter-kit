<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AspFrontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AspFrontend.styles.css" asp-append-version="true"/>
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }

      @@media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
          float: none;
          padding-left: 5px;
          padding-right: 5px;
        }
      }
    </style>
</head>

<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Edument Cafe Sample App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tab" asp-action="Open">Open Tab</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Chef" asp-action="Index">Chef Todo List</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>


<div class="container-fluid">
<div class="row-fluid">
    <div class="span3">
        <div class="well sidebar-nav">
            <ul class="nav nav-list">
                <li class="nav-header">Wait Staff Todo Lists</li>
                @foreach (var w in ViewData["WaitStaff"] as List<string>)
                {
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="WaitStaff" asp-action="Todo" asp-route-id="@w">@w</a>
                    </li>
                }
                <li class="nav-header">Open Tabs</li>
                @foreach (var t in ViewData["ActiveTables"] as List<int>)
                {
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Tab" asp-action="Status" asp-route-id="@t">@t.ToString()</a>
                    </li>
                }
            </ul>
        </div><!--/.well -->
    </div><!--/span-->
    
    <div class="span9">
        @RenderBody()
    </div><!--/span-->
    
</div><!--/row-->
</div>

<hr>

<footer class="border-top footer text-muted">
    <p>&copy; Edument 2013</p>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>